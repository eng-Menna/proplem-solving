#include <bits/stdc++.h>
using namespace std;
#define IOS ios_base::sync_with_stdio(false),cin.tie(0),cout.tie(0);
//#define loopUP(i, s, e, inc) for(int i = (s); i < (e); i+=inc
typedef long long ll; const ll Lo = 0x3f3f3f3f3f3f3f3f, N = 1e7 + 9, M = 1e5 + 9;
#define el '\n' ;
//vector<int> num ;
//num=vector<int>();
int main() {
    IOS
  string chars; cin>> chars; stack<char>stk;
    for (int i = 0; i < chars.length() ; ++i)
    {   if (stk.empty())
            stk.push(chars[i]);
        else if (stk.top()==chars[i])
            stk.pop();
        else
            stk.push(chars[i]);

    }


    if ( stk.empty())
        {cout<<"Yes"<<el;}
    else
        {cout<<"No"<<el;}


}














